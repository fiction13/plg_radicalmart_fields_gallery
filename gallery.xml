<extension version="3.9" type="plugin" group="radicalmart_fields" method="upgrade">
	<name>PLG_RADICALMART_FIELDS_GALLERY</name>
    <author>Dmitriy Vasyukov</author>
    <creationDate>January 2023</creationDate>
    <authorEmail>info@fictionlabs.ru</authorEmail>
    <authorUrl>https://fictionlabs.ru</authorUrl>
    <copyright>A copyright</copyright>
    <license>GNU General Public License version 2 or later;</license>
    <version>0.0.1-dev</version>
    <description>PLG_RADICALMART_FIELDS_GALLERY_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\RadicalMartFields\Gallery</namespace>
	<scriptfile>script.php</scriptfile>

	<!-- Language files -->
	<languages folder="language">
		<language tag="en-GB">en-GB/plg_radicalmart_fields_gallery.ini</language>
		<language tag="en-GB">en-GB/plg_radicalmart_fields_gallery.sys.ini</language>
		<language tag="ru-RU">ru-RU/plg_radicalmart_fields_gallery.ini</language>
		<language tag="ru-RU">ru-RU/plg_radicalmart_fields_gallery.sys.ini</language>
	</languages>

	<!-- Files -->
	<files>
		<folder>forms</folder>
		<folder>services</folder>
		<folder plugin="gallery">src</folder>
	</files>

	<!-- Layouts files -->
	<layouts destination="plugins/radicalmart_fields/gallery" folder="layouts">
		<folder>display</folder>
	</layouts>

	<!-- Update server -->
	<updateservers>
		<server type="extension" priority="1" name="RadicalMart Fields: Gallery">
			https://sovmart.ru/update?element=plg_radicalmart_fields_gallery
		</server>
	</updateservers>
</extension>